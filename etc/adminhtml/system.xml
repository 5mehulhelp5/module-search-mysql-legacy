<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="catalog">
            <group id="search" translate="label" type="text" sortOrder="500" showInDefault="1" showInWebsite="1" showInStore="1">
                <field id="lmysql_query_mode" translate="label comment" type="select"
                       sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Multi-word Search Logic (MySQL Legacy)</label>
                    <source_model>Swissup\SearchMysqlLegacy\Model\Config\Source\SearchMode</source_model>
                    <comment><![CDATA[
                        <strong>OR Mode (Default):</strong> "red bag" finds products with "red" OR "bag" - more results, less precise<br/>
                        <strong>AND Mode (Recommended):</strong> "red bag" finds products with "red" AND "bag" - fewer results, more relevant<br/>
                        <em>Note: Clear cache after changing this setting for immediate effect.</em>
                    ]]></comment>
                    <config_path>catalog/search/lmysql_query_mode</config_path>
                    <depends>
                        <field id="engine">lmysql</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
